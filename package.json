{
  "name": "xboot",
  "version": "0.0.0",
  "description": "模块的启动引导加载",
  "bin": {
    "xboot": "bin/xboot.js"
  },
  "main": "index.js",
  "types": "typings/index.d.ts",
  "scripts": {
    "build": "tsc -d",
    "build:w": "tsc -d -w",
    "lint": "eslint --fix .",
    "check": "npm run build && npm run lint",
    "test": "npm run check && nyc --reporter=lcov --reporter=text -t coverage --clean jest --coverage --env=node --runInBand",
    "watch": "jest --watch"
  },
  "files": [
    "dist",
    "package.json",
    "bin",
    "lib",
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiba-zhao/xboot.git"
  },
  "keywords": [
    "boot",
    "loader"
  ],
  "author": "kiba.x.zhao",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kiba-zhao/xboot/issues"
  },
  "homepage": "https://github.com/kiba-zhao/xboot#readme",
  "devDependencies": {
    "@types/jest": "^26.0.17",
    "@types/lodash": "^4.14.165",
    "@types/micromatch": "^4.0.1",
    "@types/node": "^14.14.10",
    "coffee": "^5.4.0",
    "eslint": "^7.15.0",
    "eslint-config-egg": "^9.0.0",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "nyc": "^15.1.0",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "commander": "^6.2.0",
    "globby": "^11.0.1",
    "lodash": "^4.17.20",
    "micromatch": "^4.0.2",
    "read-pkg": "^5.2.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "collectCoverageFrom": [
      "lib/**/*.js",
      "bin/**/*.js"
    ],
    "coverageReporters":["json"]
  }
}
